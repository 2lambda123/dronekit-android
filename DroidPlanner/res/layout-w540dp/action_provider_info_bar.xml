<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="?android:attr/buttonBarStyle"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bar_home"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="29m"
        android:drawableLeft="@drawable/ic_status_home"
        android:drawablePadding="5dp"/>


    <TextView
        android:id="@+id/bar_gps"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="8, 3D"
        android:drawableLeft="@drawable/ic_status_gps"
        android:drawablePadding="5dp"/>


    <TextView
        android:id="@+id/bar_propeller"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1:20"
        android:drawableLeft="@drawable/ic_status_flight_time"
        android:drawablePadding="5dp"
        />


    <TextView
        android:id="@+id/bar_battery"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="12.2v, 72%"
        android:drawableLeft="@drawable/ic_status_battery"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/bar_signal"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="86%"
        android:drawableLeft="@drawable/ic_status_rssi"
        android:drawablePadding="5dp"
        />


</LinearLayout>