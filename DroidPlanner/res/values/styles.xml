<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="staticText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        </style>

    <style name="tinyText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="dynamicText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>   
		</style>
    
    <style name="unitText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>   
		<item name="android:layout_alignParentLeft">true</item>   
		<item name="android:layout_marginLeft">100dp</item>   
	</style>
    
    <style name="hugeDynamicText" parent="@style/dynamicText">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        
		<item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:gravity">right</item>        
        </style>

    <style name="actionButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">#000000</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="transparentLayout">
        <item name="android:background">#aa000000</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/action_texture</item>
        </style>

</resources>
