<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="tinyText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="smallTelemetryText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>
		</style>

	<style name="textLabels">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#808080</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        </style>

	<style name="RPYtextLabels" parent="@style/textLabels">
        <item name="android:layout_marginLeft">0dp</item>
        </style>

    <style name="unitText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
		<item name="android:gravity">left</item>
	</style>

    <style name="largeTelemetryText">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:gravity">right</item>
        </style>

    <style name="actionButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">#000000</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="actionMenu"
 		parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
    	<item name="android:textColor">#F0F</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textSize">24sp</item>
	</style>

    <style name="transparentLayout">
        <item name="android:background">#aa000000</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@drawable/action_texture</item>
        </style>

</resources>
