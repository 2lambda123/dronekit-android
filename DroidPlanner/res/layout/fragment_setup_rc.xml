<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.droidplanner"
    style="@style/configLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/SetupTitle"
        style="@style/SetupTitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/relativeLayout1"
        android:background="@drawable/rc_setup_rectangle"
        android:text="This is a title for RC setup" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="742dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonRCCalibrate"
            style="@style/modeControl"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_green"
            android:text="@string/rc_btn_cancel"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="7"
        android:background="@color/opaque_white" >

        <FrameLayout
            android:id="@+id/fragment_setup_rc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/SetupTitle"
        android:layout_marginRight="37dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/fillBar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dp" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/fillBar8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dp" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/fillBar7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dp" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/fillBar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="230dp" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="250dp"
        android:layout_height="245dp"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toLeftOf="@+id/linearLayout1" >

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/FillBarMinMaxText01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>

        <com.droidplanner.widgets.RcStick.RcStick
            android:id="@+id/stickRight"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp" />

        <com.droidplanner.widgets.FillBar.FillBarMinMaxR
            android:id="@+id/fillBarMinMax1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/FillBarMinMaxText01" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxR>

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="245dp"
        android:layout_height="245dp"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/relativeLayout3" >

        <com.droidplanner.widgets.FillBar.FillBarMinMaxText
            android:id="@+id/FillBarMinMaxText02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxText>

        <com.droidplanner.widgets.RcStick.RcStick
            android:id="@+id/stickLeft"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="21dp" />

        <com.droidplanner.widgets.FillBar.FillBarMinMaxL
            android:id="@+id/fillBarMinMaxL1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >
        </com.droidplanner.widgets.FillBar.FillBarMinMaxL>

    </RelativeLayout>

</RelativeLayout>