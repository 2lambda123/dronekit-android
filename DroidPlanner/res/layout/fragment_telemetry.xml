<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/transparentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:baselineAligned="false"
        android:gravity="center"
        tools:ignore="HardcodedText" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                style="@style/staticText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R:" />

            <TextView
                android:id="@+id/TextView02"
                style="@style/dynamicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="-135ยบ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView2"
                style="@style/staticText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P:" />

            <TextView
                android:id="@+id/TextView03"
                style="@style/dynamicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="-90ยบ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/TextView01"
                style="@style/staticText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y:" />

            <TextView
                android:id="@+id/TextView04"
                style="@style/dynamicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="45ยบ" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TextView05"
        style="@style/staticText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_margin="2dp"
        android:text="Ground speed:" />

    <TextView
        android:id="@+id/TextView10"
        style="@style/staticText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView06"
        android:layout_margin="2dp"
        android:text="Air speed:" />

    <TextView
        android:id="@+id/TextView06"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView05"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/TextView07"
        android:text="13"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/TextView07"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView06"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:text="m/s"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView09"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView10"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/TextView08"
        android:text="9"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/TextView08"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView09"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:text="m/s"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TextView11"
        style="@style/staticText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView09"
        android:layout_margin="2dp"
        android:text="Climb rate:" />

    <TextView
        android:id="@+id/TextView12"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView11"
        android:layout_margin="2dp"
        android:layout_toLeftOf="@+id/TextView13"
        android:text="0.5"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/TextView13"
        style="@style/dynamicText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView12"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:text="m/s"
        android:textSize="25sp" />

</RelativeLayout>