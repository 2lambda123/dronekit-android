<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <fragment
        android:id="@+id/gestureMapFragment"
        android:name="com.droidplanner.fragments.helpers.GestureMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/missionFragment1"
        tools:layout="@layout/fragment_gesture_map" />

    <fragment
        android:id="@+id/missionFragment1"
        android:name="com.droidplanner.fragments.MissionFragment"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        tools:layout="@layout/fragment_mission" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#80000000"
        android:gravity="center"
        android:padding="3dp"
        android:text="Distance: 200m, Flight time: 3:30s"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <fragment
        android:id="@+id/editorToolsFragment"
        android:name="com.droidplanner.fragments.EditorToolsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/missionFragment1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_margin="5dp"
        tools:layout="@layout/fragment_editor_control" />

    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/missionFragment1"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:content="@+id/content"
        android:gravity="center"
        android:handle="@+id/slideButtonLeft"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/slideButtonLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/slide_left"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="vertical" >

            <Button
                android:id="@+id/Button03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Receive" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Load" />
        </LinearLayout>
    </SlidingDrawer>

</RelativeLayout>