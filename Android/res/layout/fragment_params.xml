<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/reload_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"/>

    <SearchView
        android:id="@+id/parameter_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="description"
        android:background="@drawable/bg_cell_white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <ListView
        android:id="@android:id/list"
        android:descendantFocusability="beforeDescendants"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@android:id/empty"
        android:textAppearance="@style/paramsClickToRefresh"
        android:text="@string/params_click_to_refresh"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>